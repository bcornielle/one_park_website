    "glob-all": "^3.1.0",
    "laravel-mix": "^2.1.14",
    "laravel-elixir": "^3.2.8",
    "laravel-elixir-vue": "^0.1.8",
    "node-sass": "^4.9.3",
    "purgecss-webpack-plugin": "^1.2.1"
  }
